{{!--天气组件--}}
<div class="weatherWidget">
    {{#each partials.weatherContext.locations}}
        <div class="location">
            <h3>{{name}}</h3>
            <a href="{{forecastUrl}}">
                <img src="{{iconUrl}}" alt="{{weatherContext}}">
                {{weatherContext}}, {{temp}}
            </a>
        </div>
    {{/each}}
    <small>
        Source: <a href="http://www.wunderground.com">Weather</a>
    </small>
</div>